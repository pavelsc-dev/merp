<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="crm_import_wizard_view_form" model="ir.ui.view">
        <field name="name">crm.import.wizard.form</field>
        <field name="model">crm.import.wizard</field>
        <field name="inherit_id" ref="custom_import_wizard.custom_import_wizard_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group" position="after">
                <group col="2">
                    <field name="salesperson_id"/>
                    <field name="sales_team_id"/>
                    <field name="source_id"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="crm_import_wizard_action" model="ir.actions.act_window">
        <field name="name">Import Leads</field>
        <field name="res_model">crm.import.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="vive_crm_import_leads.crm_import_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
